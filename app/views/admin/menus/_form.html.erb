<p>
	<%= form_for ["admin", @menu] do |f| %>
		<%= f.text_field :name %>
		<h3>Menu Items</h3>
			<%= f.fields_for :menu_items do |c| %>
				<p>
					<%= c.text_field :title %>
					<%= c.text_field :url %>
					<%= c.hidden_field :id %>
				</p>
			<% end %>
		<%= f.submit "Submit" %>
	<% end %>
</p>