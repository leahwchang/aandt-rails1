<%= form_for ["admin", @type] do |f| %>
	<p>
		<%= f.text_field :name, placeholder: "Name", class: "form-control input-lg" %>
	</p>
	<h3>Custom Fields</h3>
		<%= f.fields_for :field_definitions do |c| %>
			<p>
				<%= c.text_field :key, class: "form-control" %>
				<%= c.hidden_field :id %>
			</p>
		<% end %>
		<%= f.submit "Submit" %>
<% end %>