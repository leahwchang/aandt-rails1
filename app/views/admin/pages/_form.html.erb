<%= form_for ["admin",(page)] do |f| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <h3>Custom Fields</h3>
    <p>
      <%= f.fields_for :fields do |c| %>
        <p>
          <%= c.label :value, c.object.field_definition.key %>
          <%= c.text_field :value %>
          <%= c.hidden_field :field_definition_id %>
        </p>
      <% end %>
    </p>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.cktext_area :body %>
  </div>

  <div>
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>

  <div>
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map { |category| [category.name, category.id]} %>
  </div>

  <div>
    <%= f.hidden_field :type_id %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
